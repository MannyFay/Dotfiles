# Nvim - Leader key.
<space>

# Nvim - Scroll line to bottom of screen.
zb

# Nvim - Scroll line to center of screen.
zz

# Nvim - Scroll line to top of screen.
zt

# Nvim - Scroll half page up.
<C>u

# Nvim - Scroll half page down.
<C>d

# Nvim - Toggle file tree.
<L>tt

# Nvim - Explore file tree.
<L>et

# Nvim - Show file in file tree.
<L>sft

# Nvim - Split buffer horizontally.
<L>-

# Nvim - Split buffer vertically.
<L>|

# Nvim - Equalize size of all buffers.
<L>=

# Nvim - Grow buffer horizontally.
<L>gh

# Nvim - Shrink buffer horizontally.
<L>sh

# Nvim - Grow buffer vertically.
<L>gv

# Nvim - Shrink buffer vertically.
<L>sv

# Nvim - Jump to the right buffer.
L

# Nvim - Jump to the buffer below.
J

# Nvim - Jump to the buffer above.
K

# Nvim - Jump to the left buffer.
H



#--- Maximizer Plugin ---------------------------------------------------------

# Maximize/minimize buffer.
<L>m



#--- Harpoon Plugin -----------------------------------------------------------

# Find Harpoon marks in Telescope.
<L>fm

# Jump to Harpoon mark 1.
<L>h1

# Jump to Harpoon mark 2.
<L>h2

# Jump to Harpoon mark 3.
<L>h3

# Jump to Harpoon mark 4.
<L>h4

# Jump to Harpoon mark 5.
<L>h5

# Jump to Harpoon mark 6.
<L>h6

# Jump to Harpoon mark 7.
<L>h7

# Jump to Harpoon mark 8.
<L>h8

# Jump to Harpoon mark 9.
<L>h9

# Jump to previous Harpoon mark.
<L>hp

# Jump to next Harpoon mark.
<L>hn

# Mark a file and add it to the Harpoon list.
<L>hm

# Show Harpoon marks in floating window.
<L>hl

# Open in Harpoon marked file in vertical split.
|

# Delete item from Harpoon list.
dd -> ZZ

# Navigate up in Harpoon list.
k

# Navigate down in Harpoon list.
j

# Open file in Harpoon list in actual buffer.
enter



#--- Editor Settings ----------------------------------------------------------

# Add word under cursor to spelling file.
zg






# Nvim - Save and close buffer.
ZZ

# Nvim - Close buffer without saving.
:q

# Nvim - Force close buffer without saving.
:q!

# Nvim - To last line, first char.
G

# Nvim - Jump to first line on first char.
gg

# Nvim - Up.
k

# Nvim - Left.
h

# Nvim - Right.
l

# Nvim - Down.
j

# Jump to next word on first char.
w

# Jump to end of line.
$


#--- Align Plugin -------------------------------------------------------------

# Align text on a specific character (in visual mode).
aoc

# Align text on two specific characters (in visual mode).
aocc

# Align text on a string (in visual mode).
aos

# Align text on pattern (in visual mode).
aop

# Align paragraph on a string (in visual mode).
gaw (not a keymap actually)

# Align paragraph to a specific character (in visual mode).
gaa (not a keymap actually)


#--- Todo Comments Plugin -----------------------------------------------------

# Jump to next todo comment.
tcn

# Jump to previous todo comment.
tcp



#--- Git Signs Plugin ---------------------------------------------------------

# Preview hunk (the part before the change).
<L>gh

# Toggle blame information for current line.
<L>glb


#--- Fugitive Plugin ----------------------------------------------------------

# Open blame buffer.
<L>gb

# Open status buffer.
<L>gs



#--- Copilot Plugin -----------------------------------------------------------

# Accept suggestion.
right

# Accept word suggestion.
<L>cw

# Accept line suggestion.
<L>cl

# Show next suggestion.
down

# Show previous suggestion.
up

# Dismiss suggestion.
left


#--- Copilot Chat Plugin ------------------------------------------------------

# Open Copilot Chat.
<L>cc



