  //--------------------------------------------------------------------------------
  //--- Extensions:

  "extensions.autoCheckUpdates": true,    // Automatically check for updates.
  "extensions.autoUpdate": true,          // Automatically update extensions.

  // Neovim Extension:
  //"extensions.experimental.affinity": {  // Improve performance of extension.
   // "asvetliakov.vscode-neovim": 1
  //},
  "vim": {
    "neovimPath": "/opt/homebrew/bin/nvim",  // Path to Nvim executable (macOS).
    "useSystemClipboard": true
  },
  "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/nvim/init.lua",  // Path to Nvims init.lua file (macOS).

  // Vim Extension:
  "extensions.experimental.affinity": {  // Improve performance of extension.
    "vscodevim.vim": 1
  },
  "vim.leader": "<space>",    // Set <Leader> to space globally (standard is \).
  "vim.useSystemClipboard": true,  // Use clipboard of OS.
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "/"],                // Use <Leader>/ to comment line.
      "commands": ["editor.action.commentLine"],
      "silent": true
    }, {
      "before": ["v", "v"],                      // Use vv to select whole line.
      "after": ["V"],
      "silent": true
    }, {
      "before": ["<Esc>"],                      // Use esc to quit highlight search.
      "after": [":nohlsearch<CR>"],
      "silent": true
    }, {
      "before": ["n"],                      // Center the screen after jumping to the next match.
      "after": ["n", "z", "z", "z", "v"],
      "silent": true
    }, {
      "before": ["N"],                      // Center the screen after jumping to the previous match.
      "after": ["N", "z", "z", "z", "v"],
      "silent": true
    }, {
      "before": ["U"],                      // Redo last action.
      "after": ["<C-r>"],
      "silent": true
    }, {
      "before": ["<", "<"],                      // Stay in visual mode after indent width <<.
      "after": ["<", "g", "v"],
      "silent": true
    }, {
      "before": [">", ">"],                      // Stay in visual mode after indent width >>.
      "after": [">", "g", "v"],
      "silent": true
    }, {
      "before": ["Y"],                      // Yank to end of line.
      "after": ["y", "$"],
      "silent": true
    }, {
      "before": ["v", "b"],                      // Use vb for visual block mode.
      "after": ["<C-v>"],
      "silent": true
    }, {
      "before": [",", ","],                      // Insert a , at the end of line.
      "after": ["<Esc>", "A", ",", "<Esc>"],
      "silent": true
    }, {
      "before": [":", ":"],                      // Insert a : at the end of line.
      "after": ["<Esc>", "A", ":", "<Esc>"],
      "silent": true
    }, {
      "before": ["<leader>", "j", "l"],                      // Join line below with white space.
      "after": ["J"],
      "silent": true
    }, {
      "before": ["<leader>", "e", "t"],               // Explore file tree.
      "commands": ["workbench.view.explorer"],
      "silent": true
    }, {
      "before": ["<leader>", "t", "h"],               // Open terminal in horizontal split.
      "commands": ["workbench.action.terminal.focus"],
      "silent": true
    }, {
      "before": ["|"],               // Open file in vertical split. -> not working
      "commands": ["explorer.openToSide"],
      "silent": true
    }, {
      "before": ["L"],               // Jump to right split.
      "commands": ["workbench.action.focusRightGroup"],
      "silent": true
    }, {
      "before": ["H"],               // Jump to left split.
      "commands": ["workbench.action.focusLeftGroup"],
      "silent": true
    }, {
      "before": [">", ">"],   // Indent current line.
      "commands": ["editor.action.indentLines"],
      "silent": true
    }, {
      "before": ["<", "<"],  // Unindent current line.
      "commands": ["editor.action.reindentlines"],
      "silent": true
    }, {
      "before": ["<leader>", "h", "m"],  // Harpoon - set mark.
      "commands": ["vscode-harpoon.addEditor"],
      "silent": true
    }, {
      "before": ["<leader>", "h", "l"],  // Harpoon - show list.
      "commands": ["vscode-harpoon.editorQuickPick"],
      "silent": true
    }, {
      "before": ["<leader>", "f", "f"],  // Find files.
      "commands": ["workbench.action.quickOpen"],
      "silent": true
    },
    //{
     // "before": ["x"],                      // If delete one char, don't copy it to the clipboard.
     // "after": ['"_x'],
     // "silent": true
    //}
  ],

// vim.keymap.set('n', 'x', '"_x')                                         -- If delete one char, don't copy it to the clipboard.
  "vim.visualModeKeyBindings": [
    {
      "before": [ ">>" ],                  // Indent selected lines.
      "commands": [ "editor.action.indentLines" ],
      "silent": true
    }, {
      "before": [ "<<" ],                       // Unindent selected lines.
      "commands": [ "editor.action.reindentlines" ],
      "silent": true
    }, {
      "before": ["<leader>", "/"],                // Use <Leader>/ to comment line.
      "commands": ["editor.action.commentLine"],
      "silent": true
    },

  ]

